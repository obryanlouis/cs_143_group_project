<?xml version="1.0" encoding="ISO-8859-1"?>

<Network>
    <snapshotTime>100</snapshotTime>
    <routingTableUpdateTime>5000</routingTableUpdateTime>
    <networkHosts separateGraphs="0">
        <host id="1" print="1" />
        <host id="2" print="1" />
    </networkHosts>
    <networkRouters>
        <router id="1" />
        <router id="2" />
        <router id="3" />
        <router id="4" />
    </networkRouters>
    <!-- The "separateGraphs" option will make separate graphs for each
         link/flow/host if it is 1, or it will put them all on the same
         graph if it is 0 -->
    <networkLinks separateGraphs="1">
        <!-- The "print" attribute tells the parser whether or not to include
             this link/flow/host in the graphs -->
        <link id="0" print="0">
            <linkRate>12.5</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="0">1</node1>
            <node2 type="1">1</node2>
        </link>
        <link id="1" print="1">
            <linkRate>10</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="1">1</node1>
            <node2 type="1">2</node2>
        </link>
        <link id="2" print="1">
            <linkRate>10</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="1">1</node1>
            <node2 type="1">3</node2>
        </link>
        <link id="3" print="0">
            <linkRate>10</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="1">2</node1>
            <node2 type="1">4</node2>
        </link>
        <link id="4" print="0">
            <linkRate>10</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="1">3</node1>
            <node2 type="1">4</node2>
        </link>
        <link id="5" print="0">
            <linkRate>12.5</linkRate>
            <linkDelay>10</linkDelay>
            <bufferSize>64</bufferSize>
            <node1 type="1">4</node1>
            <node2 type="0">2</node2>
        </link>
    </networkLinks>
    <networkFlows separateGraphs="0">
        <flow id="1" print="1" >
            <source>1</source>
            <destination>2</destination>
            <flowSize>2</flowSize>
            <flowStartTime>0.5</flowStartTime>
            <!-- Options: reno, cubic, slow, tahoe, cubic -->
            <congestionAlgorithmType>dumb</congestionAlgorithmType>
        </flow>
    </networkFlows>
</Network>

